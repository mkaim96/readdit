@model Readdit.Infrastructure.Application.SubReaddits.Commands.CreateLinkForSubReaddit.CreateLinkCommand

@{
    ViewData["Title"] = "Submit a link";
}

<div class="box">
    <h5 class="page-header">Submit a link for <i>@Model.SubReadditName</i> community</h5>

        <form method="post" asp-action="CreateLink" asp-controller="SubReaddit">
        <div class="form-group">
            <label asp-for="@Model.Url"></label>
            <span class="badge badge-danger" asp-validation-for="@Model.Url"></span>
            <input class="form-control" asp-for="@Model.Url" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.Description"></label>
            <span class="badge badge-danger" asp-validation-for="@Model.Description"></span>
            <input class="form-control" asp-for="@Model.Description" />
        </div>
        <button type="submit" class="btn btn-primary mb-3">Submit</button>
    </form>
</div>

