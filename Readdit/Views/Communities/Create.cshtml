@model Readdit.Infrastructure.Application.SubReaddits.Commands.CreateSubReaddit.CreateCommunityCommand

<div class="box">
    <h5 class="page-header">Create new community</h5>

    <form method="post" asp-action="Create" asp-controller="Communities">
        

        <div class="form-group">
            <label asp-for="@Model.Name">Community name</label>
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
            <input class="form-control" placeholder="Enter community name" asp-for="@Model.Name" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.Description"></label>
            <span asp-validation-for="@Model.Description" class="text-danger"></span>
            <input class="form-control" placeholder="Enter description" asp-for="@Model.Description" />
        </div>
        <button type="submit" class="btn btn-primary mb-3">Submit</button>
    </form>
</div>
