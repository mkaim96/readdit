@model Readdit.Models.SubReaddits.IndexViewModel
@{
    ViewData["Title"] = "Communities";
}

<div class="container">
    <div class="row">

        <div class="col-sm-6 box p-3 mr-1 d-table">
            <label>Search for communities: </label>
            <form method="post" asp-action="SearchCommunities" asp-controller="Communities" class="form-inline">
                    <input class="form-control" name="search"/>
                    <button type="submit" class="btn btn-light ml-1">Search</button>
            </form>
            <a asp-action="Create" asp-controller="Communities">Create new community</a>
            @if (Model.SearchResults.Count != 0)
            {
                <h6 class="mt-4">Search results</h6>
                <ul class="list-group list-group-flush mt-4">
                    @foreach (var com in Model.SearchResults)
                    {
                        <li class="list-group-item">
                            <a asp-action="GetLinks"
                               asp-controller="Communities"
                               asp-route-communityName="@com.Name">
                                @com.Name
                            </a>
                        </li>
                    }
                </ul>
            }
        </div>

        <div class="col-sm-5 box p-3 d-table">
            <h4>Popular</h4>
            <ol class="list-group">
                @foreach(var com in Model.Popular)
                {
                    <li class="list-group-item">
                        <a asp-action="GetLinks"
                           asp-controller="Communities"
                           asp-route-communityName="@com.Name">
                        @com.Name</a>
                    </li>
                }
            </ol>
        </div>
    </div>
</div>