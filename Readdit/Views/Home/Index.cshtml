@using Readdit.Infrastructure.Dto
@model ICollection<LinkDto>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    @foreach(var link in Model)
    {
        <div class="container">
            <div class="row post-wrapper">
                <div class="col-sm-1 sidebar">
                    
                </div>
                <div class="col-sm-10 post">
                    <div class="row topbar">
                        <span class="small text-muted">Posted by: @link.Author</span>
                    </div>
                    <div class="row main">
                        <a class="no-decoration" asp-action="Details" asp-controller="Links" asp-route-id="@link.Id">
                            <h4>@link.Description</h4>
                        </a>
                        <a href="@link.Url">@link.Url</a>
                    </div>
                    <div class="row foot">
                        <span class="small text-muted">Comments: @link.CommentsCount</span>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
